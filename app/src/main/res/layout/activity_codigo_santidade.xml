<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/azul_claro"
    tools:context="com.codigodasantidade.crucificado.CodigoSantidade">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/codigo_santidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/marron"
        android:text="O Codigo da Santidade"
        android:textSize="25dp"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="@color/branco"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/a_cruz"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/branco"
        android:padding="10dp"
        android:text="@string/aviso_importante"
        android:textColor="@color/preto" />


    <Button
        android:id="@+id/discord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/marron"
        android:text="O Discord"
        android:textColor="@color/branco"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/canal"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:background="@color/marron"
        android:text="O Canal do Youtube"
        android:textColor="@color/branco"
        android:textSize="25dp" />


</LinearLayout>

</ScrollView>